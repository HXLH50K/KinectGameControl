<Window x:Class="KinectGameControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800" Background="Transparent">
    <Grid Width="800" Height="600">
        <Image x:Name="ColorImageElement"></Image>
        <Grid x:Name="LayoutRoot" Background="Transparent">
            <!--<Grid x:Name="LayoutRoot" Background="Black">-->
        </Grid>
        <StackPanel Name="check" Grid.Column="1" Grid.Row="0" Margin="0,10,15,210" Grid.ColumnSpan="2">
            <RadioButton Name="Radio1" Margin="3"  Content="xiaobawang" GroupName="game" Checked="RadioButton1_Checked" IsChecked="False"></RadioButton>
            <RadioButton Name="Radio2" Margin="3"  Content="quanhuang" GroupName="game" Checked="RadioButton2_Checked" IsChecked="False"></RadioButton>
        </StackPanel>
    </Grid>
</Window>
